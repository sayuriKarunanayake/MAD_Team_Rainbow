<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:elevation="20dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_book_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#F6BBFA"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_book_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_book_item"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_book_item_description"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_book_item_category"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_book_item"
            android:text="Book Description"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_book_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Category"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_book_item"
            android:layout_below="@+id/tv_book_item_name"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_book_item_price"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_book_item_description"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/img_book_item"
            android:text="Book Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/delete_bin"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        <ImageView
            android:id="@+id/edit_details"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@+id/tv_book_item_price"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/ic_baseline_edit_24" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>