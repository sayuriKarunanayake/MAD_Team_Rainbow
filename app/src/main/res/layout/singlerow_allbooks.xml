<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_allbooks_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#F6BBFA"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_allbooks_name"
            android:layout_width="297dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_allbooks_item"
            android:text="Book Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_allbooks_description"
            android:layout_width="294dp"
            android:layout_height="57dp"
            android:layout_below="@+id/tv_allbooks_category"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/img_allbooks_item"
            android:text="Book Description"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_allbooks_price"
            android:layout_width="291dp"
            android:layout_height="53dp"
            android:layout_below="@+id/tv_allbooks_description"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/img_allbooks_item"
            android:text="Book Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_allbooks_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_allbooks_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/img_allbooks_item"
            android:text="Book Category"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_allback2"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="300dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="80dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>